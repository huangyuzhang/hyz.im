{# navigation #}
{% if navigation.navItems %}

  {% for item in navigation.navItems %}

    {# check sub #}
    {% if item.subs | length == 0 %}

      <a class="navbar-item {{ 'nav-current' if (path | replace("/", "")) == (item.url | replace("/", "")) }}" href="{{ item.url }}">
        {{ item.text }}
      </a>
    
    {% else %}


       <div class="navbar-item has-dropdown is-hoverable">
        <a class="navbar-item {{ 'nav-current' if (path | replace("/", "")) == (item.url | replace("/", "")) }}" href="{{ item.url }}">
          {{ item.text }}
        </a>

      {% for sub in item.subs %}
        <div class="navbar-dropdown">
          <a class="navbar-item {{ 'nav-current' if (path | replace("/", "")) == (sub.url | replace("/", "")) }}" href="{{ sub.url }}">
          {{ sub.text }}
          </a>
        </div>
      {% endfor %}
    
    {% endif %}

  {% endfor %}

{% endif %}
