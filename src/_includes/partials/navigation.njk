{# navigation #}
{% if navigation.navItems %}

  {% for item in navigation.navItems %}

    {# check sub #}
    {% if item.subs | length == 0 %}

      <a class="navbar-item {{ 'nav-current' if (path | replace("/", "")) == (item.url | replace("/", "")) }}" href="{{ item.url }}">
        {{ item.text }}
      </a>
    
    {% else %}


       <div class="navbar-item has-dropdown is-hoverable">
        <a class="navbar-item {{ 'nav-current' if (path | replace("/", "")) == (item.url | replace("/", "")) }}" href="{{ item.url }}">
          {{ item.text }}
        </a>

      {% for sub in item.subs %}
        <div class="navbar-dropdown">
          <a class="navbar-item {{ 'nav-current' if (path | replace("/", "")) == (sub.url | replace("/", "")) }}" href="{{ sub.url }}">
          {{ sub.text }}
          </a>
        </div>
      {% endfor %}
    
    {% endif %}

  {% endfor %}

{% endif %}

{# navbar search #}
{% if settings.component.navSearch %}
<div class="fizzy-search">
    <div class="navbar-item" id="search-btn">
      <i class="iconfont icon-search"></i>
    </div>

    {# id: search container #}
    <div class="field has-addons" style="display:none" id="search-container">
        {# id: search-form #}
        <form id="search-form" class="control has-icons-left" action="/search/" method="get">
            <input id="search-input" type="text" class="input" placeholder="Search" name="q">
            <span class="icon is-left">
                <i class="iconfont icon-search"></i>
            </span>
        </form>
        {# id: close-btn #}
        <div class="control" id="close-btn">
            <button type="submit" class="button" style="padding-left:calc(0.75em - 1px);padding-right:calc(0.75em - 1px);"><i class="iconfont icon-cross"></i></button>
        </div>
    </div>
    {# <div id="search-results"></div> #}
</div>
{% endif %}
